{
  "name": "Smoot",
  "version": "0.1",
  "description": "Unit Conversion Extension with Fun Facts!",
  "manifest_version": 2,
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/smoot16.png",
      "32": "images/smoot32.png",
      "48": "images/smoot48.png",
      "64": "images/smoot64.png",
      "128": "images/smoot128.png"
    }
  },
  "icons": {
    "16": "images/smoot16.png",
    "32": "images/smoot32.png",
    "48": "images/smoot48.png",
    "64": "images/smoot64.png",
    "128": "images/smoot128.png"
  },
  "permissions": ["contextMenus"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}